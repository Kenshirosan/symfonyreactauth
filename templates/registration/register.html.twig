{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% if not app.user %}
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1>Register</h1>

        {{ form_start(registrationForm, {attr: {class: 'form'}}) }}
        {{ form_row(registrationForm.email, {attr: {class: 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password', attr: {class: 'form-control'}
        }) }}
        <div class="checkbox mt-1">
            {{ form_row(registrationForm.agreeTerms, {label_attr: {class: 'me-2'}, attr: {class: 'form-check-input mb-3'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}

    {% else %}
        <p>You already have an account, dummy</p>
    {% endif %}
{% endblock %}
